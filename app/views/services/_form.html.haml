= form_for @service do |f|
  - if @service.errors.any?
    #error_explanation
      %h2= "#{pluralize(@service.errors.count, "error")} prohibited this service from being saved:"
      %ul
        - @service.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :address
    = f.text_field :address
  .field
    = f.label :hostname
    = f.text_field :hostname
  .field
    = f.label :port
    = f.number_field :port
  .field
    = f.label :certificate
    = f.text_field :certificate
  .field
    = f.label :current
    = f.check_box :current
  .field
    = f.label :retired
    = f.check_box :retired
  .actions
    = f.submit 'Save'
